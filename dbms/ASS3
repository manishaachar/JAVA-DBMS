CREATE TABLE STADIUM(
SID VARCHAR(10) PRIMARY KEY,
SNAME VARCHAR(30),
CITY VARCHAR(30),
AR_NAME VARCHAR(20),
PINCODE INT(6));

MID VARCHAR(10));
FOREIGN KEY(MID)REFERENCES MATCH(MID));


mysql> DESC STADIUM;
